        <activity
            android:name=".TaskList2Activity"
            android:label="@string/title_activity_task_list2"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".RoomActivity" />
        <activity android:name=".AddLabActivity" />
        <activity
            android:name=".LabActivity"
            android:label="@string/title_activity_lab"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>